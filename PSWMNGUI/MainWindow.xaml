<Window x:Class="PSWMNGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Manager" Height="450" Width="800">

    <Window.Resources>
        <!-- Style for Buttons -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Main Content Frame -->
        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" DockPanel.Dock="Top"/>

        <!-- Bottom Navigation Bar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                    Background="#FF333333" DockPanel.Dock="Bottom">
            <Button Content="Login" Click="Login_Click"/>
            <Button Content="Register" Click="Register_Click"/>
            <Button Content="Main Page" Click="MainPage_Click"/>
            
        </StackPanel>
    </DockPanel>
</Window>
